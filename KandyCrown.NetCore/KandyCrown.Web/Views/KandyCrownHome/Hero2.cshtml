@using KandyCrown.Web.Helpers

@{
    Layout = null;
}

<!-- hero 2 -->
<div class="knd-hero-4 knd-up" id="top">
    <div id="scene" class="knd-hero-scene">
        <div class="knd-anim-frame" data-depth="0.25">
            <img src="~/theme/v1/img/shapes/Hero.png" alt="shapes" class="knd-hero-animation" data-depth="0.25">
        </div>
        <div class="knd-pad-frame" data-depth="0.35">
            <div class="knd-shape-pad"></div>
        </div>
    </div>
    <div class="knd-overlay"></div>
    <div class="container knd-hero-main knd-relative">
        <div class="knd-hero-text">
            @* <i class="fal fa-award knd-mb15"></i> *@
            @* <p class="knd-stylized knd-m2 knd-mb60">The most<br>titled Team</p> *@
            @* <h1 class="knd-display2 knd-rubber">Feel the Heat.<br>Taste the <span class="knd-a1">Heritage.</span></h1> *@
            <h1 class="knd-display2 knd-rubber">Feel the Heat.<br>Taste the Heritage.</h1>

            <div class="knd-circle-text-frame">
                <a href="#scroll" class="knd-circle-text knd-scroll-to knd-c-gone" data-no-swup>
                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 300 300" enable-background="new 0 0 300 300" xml:space="preserve" data-value="360" class="knd-rotate">
                    <defs>
                    <path id="circlePath" d="M 150, 150 m -60, 0 a 60,60 0 0,1 120,0 a 60,60 0 0,1 -120,0 " />
                        </defs>
                    <circle cx="150" cy="100" r="75" fill="none" />
                    <g>
                    <use xlink:href="#circlePath" fill="none" />
                    <text style="letter-spacing: 2px">
                                <!-- circle text -->
                    <textPath xlink:href="#circlePath">scroll down - scroll down - scroll down - </textPath>
                            </text>
                        </g>
                    </svg>
                    <span class="knd-arrow">
                        <i class="fal fa-arrow-down"></i>
                    </span>
                </a>
            </div>

        </div>
    </div>
</div>
<!-- hero end -->